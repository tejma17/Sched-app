<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="openClass"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/nameandtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Data Minsasing"
                android:layout_weight="4"
                android:scrollHorizontally="true"
                android:textColor="@color/set_text"
                android:fontFamily="@font/convergence"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/convergence"
                    android:maxLines="1"
                    android:layout_marginHorizontal="10dp"
                    android:text="(LEC)"
                    android:textColor="@color/set_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="end"
                android:textColor="@color/set_text"
                android:text="5:00 pm"
                android:textStyle="bold"
                android:fontFamily="@font/convergence"
                android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/teachtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameandtime"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/set_text"
                    android:text="DMW"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:layout_marginEnd="10dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/set_text"
                    android:text="VKC"
                    android:gravity="end"
                    android:fontFamily="@font/raleway"
                    android:textSize="17sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_below="@id/teachtime"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/meet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Join Class"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/text_hint"
                    app:strokeWidth="0.3dp"
                    android:textColor="@color/set_text"
                    app:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/raleway"
                    android:textSize="16sp"
                    android:layout_marginEnd="7dp"
                    android:textAllCaps="false"
                    app:iconTint="@color/set_text"
                    app:icon="@drawable/ic_meet"
                    app:iconSize="18dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/classroom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Classroom"
                    android:textStyle="bold"
                    android:textColor="@color/set_text"
                    android:layout_weight="1"
                    app:cornerRadius="5dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/text_hint"
                    app:strokeWidth="0.3dp"
                    app:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/raleway"
                    android:textSize="16sp"
                    android:layout_marginStart="7dp"
                    android:textAllCaps="false"
                    app:iconTint="@color/set_text"
                    app:icon="@drawable/ic_google_classroom"
                    app:iconSize="18dp"/>

            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>