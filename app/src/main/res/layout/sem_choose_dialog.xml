<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Semester*"
        android:layout_centerHorizontal="true"
        android:id="@+id/open"
        android:textColor="@color/set_text"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:fontFamily="@font/raleway"
        android:layout_gravity="center"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/open"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/radioGP">
        <RadioButton
            android:id="@+id/it"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BTech IT"
            android:checked="true"
            android:layout_weight="1"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/ece"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BTech ECE"
            android:layout_weight="1"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/radioGP"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/semIII"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:text="Sem III"
            android:textColor="@color/set_text"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:padding="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/text_hint"/>

        <Button
            android:id="@+id/semV"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:text="Sem V"
            android:textColor="@color/set_text"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:padding="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/text_hint"/>

        <Button
            android:id="@+id/semVII"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:text="Sem VII"
            android:textColor="@color/set_text"
            android:gravity="start|center_vertical"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:padding="0dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list"
        android:text="* Available for IIITA students only"
        android:fontFamily="@font/raleway"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"/>

</RelativeLayout>