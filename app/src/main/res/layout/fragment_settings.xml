<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:background="@color/background"
        android:layout_height="?android:actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="SETTINGS"
            android:fontFamily="@font/baloo"
            android:textSize="20sp"
            android:textColor="@color/set_text"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <Button
        android:id="@+id/reminder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Reminder preferences (Beta) "
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>


    <Button
        android:id="@+id/export"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Export timetable"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>

    <Button
        android:id="@+id/importData"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Import timetable"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Reset data"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>

    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Features guide"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>

    <Button
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Privacy policy"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>

    <Button
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="Logout"
        android:textColor="@color/set_text"
        android:gravity="start|center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:fontFamily="@font/raleway"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:padding="0dp"/>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_hint"/>



    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginVertical="50dp"
        android:text="v 1.1.0"
        android:textAllCaps="false"
        android:fontFamily="@font/convergence"
        android:textColor="@color/text_hint"/>

</LinearLayout>